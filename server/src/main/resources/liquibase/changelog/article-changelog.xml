<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">
    <changeSet id="20230504181234" author="peter">
        <createTable tableName="articles">
            <column name="id" type="varchar(50)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="varchar(100)"/>
            <column name="brief" type="varchar(250)"/>
            <column name="markdown" type="text"/>
            <column name="author" type="varchar(100)"/>
            <column name="image_url" type="varchar(100)"/>
            <column name="article_type" type="varchar(30)"/>
            <column name="article_status" type="varchar(30)"/>
            <column name="article_order" type="int(4)"/>
            <column name="tag" type="varchar(50)"/>
            <column name="created_on" type="varchar(50)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
